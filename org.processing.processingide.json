{
    "id": "org.processing.processingide",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
	"sdk-extensions": [
		"org.freedesktop.Sdk.Extension.openjdk17"
	],
    "command": "processing",
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "JAVA_HOME": "/app/jre",
            "V": "1"
        }
    },
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--device=all",
		"--env=PATH=/app/bin:/app/jre/bin:/usr/bin",
		"--env=JAVA_HOME=/app/jre",
        "--filesystem=home",
        "--socket=pulseaudio",
        "--share=network"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/info",
        "/share/man"
    ],
    "modules": [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/openjdk17/install.sh"
            ]
        },
        {
            "name": "processing",
            "buildsystem": "simple",
            "build-commands": [
                "ant/bin/ant build -f processing4/build/",
                "ant/bin/ant clean -f processing4/build/",
                "ant/bin/ant clean-libs -f processing4/build/",
                ".processing4/build/linux/install.sh"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/processing/processing-examples.git",
                    "commit": "5266f3022f583e88aeb4c2a18055536bff985594",
                    "dest": "processing-examples",
                    "x-checker-data": {
                        "type": "git"
                    }
                },
                {
                    "type": "git",
                    "url": "https://github.com/processing/processing4.git",
                    "tag": "processing-1292-4.2",
                    "commit": "adad1a17c09d623ed0647fbd7b0ea0162b63a9b3",
                    "dest": "processing4",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^processing-([\\d.]+)-([\\d.]+)$"
                    }
                },
                {
                    "type": "archive",
                    "url": "https://dlcdn.apache.org//ant/binaries/apache-ant-1.10.13-bin.tar.xz",
                    "sha256": "de0a860bf339e6975558f426772a6aa2c6ae0856215dd9aaf57aa2476d665664",
                    "dest": "ant"
                },
                {
                    "type": "patch",
                    "path": "processing-add-appdata-tags.patch"
                },
                {
                    "type": "patch",
                    "path": "processing-mime-type-icon.patch"
                },
                {
                    "type": "patch",
                    "path": "processing-desktop-template-icon.patch"
                },
                {
                    "type": "script",
                    "dest-filename": "processing.sh",
                    "commands": [
                        "#!/bin/sh",
                        "exec /app/share/processing/processing $@"
                    ]
                }
            ]
        }
    ]
}
